NODE_ENV=test
PORT=3001
DATABASE_URL=postgresql://postgres:password@localhost:5432/taar_test
REDIS_URL=redis://localhost:6379/1

# JWT
JWT_SECRET=testsecretkeythatisatleast32characterslong
JWT_REFRESH_SECRET=testrefreshsecretkeythatisatleast32characterslong
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS (Mock values for testing)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key
AWS_S3_BUCKET=test-bucket
AWS_SNS_SMS_SENDER_ID=TAAR

# Signal Protocol (Mock values for testing)
SIGNAL_SERVER_KEY_ID=test-key-id
SIGNAL_SERVER_PRIVATE_KEY=test-private-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OTP
OTP_EXPIRES_IN_MINUTES=5
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=3

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# CORS
ALLOWED_ORIGINS=http://localhost:3000

# WebSocket
WS_PORT=3001
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# File Upload
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg,application/pdf

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true